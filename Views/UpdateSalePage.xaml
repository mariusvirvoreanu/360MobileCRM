<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRM_App.Views.UpdateSalePage"
             Title="Pagina Actualizare Vanzare">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Detalii Vanzare" HorizontalTextAlignment="Center" Padding="20" FontSize="Medium" FontAttributes="Bold"/>
            <Label Text="Nume Client:" />
            <Label x:Name="NameLabel" />
            <Label Text="Nume Produs:" />
            <Label x:Name="ProductNamelabel" />
            <Label Text="Suma (RON):" />
            <Label x:Name="AmountLabel" />
            <!-- Status Picker -->
            <Label Text="Status:"/>
            <Picker Title="Selecteaza Status" x:Name="StatusPicker"/>
            <!-- Description Entry -->
            <Label Text="Descriere"/>
            <Entry Placeholder="Adauga descriere" x:Name="DescriptionEntry" />
            <Label x:Name="DescriptionError" TextColor="Red" IsVisible="False" />
            <!-- Update Button -->
            <Button Text="Actualizeaza" Clicked="OnUpdateClicked"  Margin="50" Padding="20" WidthRequest="120"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>