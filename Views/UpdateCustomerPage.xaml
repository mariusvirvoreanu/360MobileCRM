<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRM_App.Views.UpdateCustomerPage"
             Title="Pagina Actualizare Client">
    <VerticalStackLayout>
        <StackLayout Padding="20">
            <Label Text="Detalii Client" Margin="20" FontSize="Large" HorizontalTextAlignment="Center"></Label>
            <Label Text="Nume" />
            <Entry x:Name="NameEntry" />
            <Label Text="Email" />
            <Entry x:Name="EmailEntry" />
            <Label Text="Telefon" />
            <Entry x:Name="PhoneEntry" />
            <Label Text="Adresa" />
            <Entry x:Name="AddressEntry" />
            <Button Text="Actualizeaza" Clicked="OnUpdateClicked" Margin="50"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>