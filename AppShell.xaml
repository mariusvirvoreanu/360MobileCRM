<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:CRM_App.Views"
       x:Class="CRM_App.AppShell">

    <ShellItem Route="main" Title="Pagina Principala" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    </ShellItem>

    <ShellItem Route="user" Title="Pagina Utilizator" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent Route="UserPage" ContentTemplate="{DataTemplate local:UserPage}" />
    </ShellItem>

    <ShellItem Route="login" Title="Logout" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}"/>
    </ShellItem>

</Shell>
